<main class="ij-form">
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-7 homepage-cover">
        <div class="container homepage-header homepage-section">
          <div class="row">
            <h1>Your Include Journey</h1>
          </div>
          <div class="row">
            <h4>track and progress on your journey to make the changes you want and need.</h4>
          </div>
          <div class="row">
            <p class="lead"><small>Built for Include UK by the Legal Innovation Lab Wales</small></p>
          </div>
        </div>
      </div>
      <div class="col-12 col-md-5">
        <div class="form-container">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <h2><i class="fas fa-user"></i> Log in</h2>

            <div class="form-group">
              <%= render "users/shared/error_messages", resource: resource %>
              <p class="text-danger">
                <% if flash[:alert] %>
                  <%= flash[:alert] %>
                <% end %>
              </p>
            </div>

            <div class="form-floating">
              <%= f.email_field :email, class: 'form-control', autocomplete: "email", placeholder: "Email Address" %>
              <%= f.label :email %>
            </div>

            <div class="form-floating">
              <%= f.password_field :password, class: 'form-control', autocomplete: "current-password", placeholder: "Password" %>
              <%= f.label :password %>
            </div>

            <div class="form-group">
              <%= f.submit "Log in", class: 'btn btn-primary' %>
            </div>

            <div class="other-actions">
              <%= render(partial: "users/shared/links", locals: { text: 'Trouble signing in?' }) %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</main>
