<main class="container user wellbeing-assessments show">
  <%= render 'shared/back_btn' %>
  <section class="row pb-4" id="wellbeing">
    <div class="col-12 col-md-3 services mt-3 mt-md-5 pb-3">
      <h3>Your Services</h3>
      <div class="container wellbeing-services-list">
        <% @wellbeing_services.each_with_index do |service| %>
          <div class="row wellbeing-service" data-metrics="<%= service.metrics %>">
            <div class="col-12">
              <%= link_to service.name, service.website, class: 'btn btn-success' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-9">
      <%= render 'shared/wellbeing_chart/wrapper', wellbeing_assessment: @wellbeing_assessment,
                 chart_alignment: 'left', chart_heading: 'Your Wellbeing',
                 sliders_heading: 'Recorded At', show_timestamp: true %>
    </div>
  </section>
</main>

<%= javascript_pack_tag 'wellbeing_assessment_chart' %>
<%= javascript_pack_tag 'wellbeing_service' %>