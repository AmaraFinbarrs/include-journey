<%= render 'layouts/searchable', class_list: 'user contacts', header: 'Contacts', index: 'contacts' do %>
  <div class="container p-0">
    <%= render 'shared/new_btn', path: new_contact_path, text: 'Add Contact' %>
    <div class="row g-4 mt-3">
      <% @resources.each do |contact| %>
        <%= render 'card', contact: contact %>
      <% end %>
    </div>
  </div>
<% end %>
