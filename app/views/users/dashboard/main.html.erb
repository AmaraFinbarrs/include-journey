<main class="container user dashboard">
  <section class="row journey">
    <div class="col mb-3">
      <h2 class="mb-3">Your Journey</h2>
      <div class="container buttons">
        <div class="row">
          <%= link_to '#journal', class: 'col d-flex align-items-center btn' do %>
            <%= render partial: 'icon', locals: { icon: 'fa-book', text: 'My Journal' } %>
          <% end %>
          <%= link_to '#', class: 'col d-flex align-items-center btn' do %>
            <%= render partial: 'icon', locals: { icon: 'fa-calendar-alt', text: 'My Appointments' } %>
          <% end %>
          <%= link_to '#wellbeing', class: 'col d-flex align-items-center btn' do %>
            <%= render partial: 'icon', locals: { icon: 'fa-heart', text: 'My Needs' } %>
          <% end %>
        </div>
        <div class="row">
          <%= link_to '#', class: 'col d-flex align-items-center btn' do %>
            <%= render partial: 'icon', locals: { icon: 'fa-address-book', text: 'My Contacts' } %>
          <% end %>
          <%= link_to '#', class: 'col d-flex align-items-center btn' do %>
            <%= render partial: 'icon', locals: { icon: 'fa-road', text: 'My Journey' } %>
          <% end %>
          <%= link_to '#', class: 'col d-flex align-items-center btn' do %>
            <%= render partial: 'icon', locals: { icon: 'fa-info-circle', text: 'My Support' } %>
          <% end %>
        </div>
        <div class="row">
          <%= link_to '#', class: 'col d-flex align-items-center btn' do %>
            <%= render partial: 'icon', locals: { icon: 'fa-tasks', text: 'My Goals' } %>
          <% end %>
          <%= link_to '#', class: 'col d-flex align-items-center btn' do %>
            <%= render partial: 'icon', locals: { icon: 'fa-calendar-alt', text: 'Include: What\'s On' } %>
          <% end %>
          <%= link_to '#', class: 'col d-flex align-items-center btn' do %>
            <%= render partial: 'icon', locals: { icon: 'fa-comments', text: 'My Voice' } %>
          <% end %>
        </div>
      </div>
    </div>
  </section>
  <section class="row pb-4" id="wellbeing">
    <div class="col-md-3 services">
      <h3>Your Services</h3>
      <div class="container mt-3">
        <% [*1..4].each do |i| %>
          <div class="row <%= (i > 1 ? 'mt-2' : '') %>">
            <div class="col">
              <%= link_to "Service #{i}", '#', class: 'btn btn-success' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-4 chart">
      <h3>Your Wellbeing</h3>
      <div class="container mt-3">
        <div class="row">
          <div class="col">
            <canvas id="wellbeing-chart" width="400" height="400"></canvas>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-5 sliders">
      <% if @wba_self.present? %>
        <h3>How are you today?</h3>
        <%= form_with model: @wba_self, url: wba_selves_path, method: :post do |f| %>
          <div class="container mt-3">

            <% @wellbeing_metrics.each do |wellbeing_metric| %>
              <div class="row">
                <div class="col-12 col-md-5">
                  <%= f.label "wellbeing_metric_#{wellbeing_metric.id}".to_sym, wellbeing_metric.name %>
                </div>
                <div class="col-9 col-md-5">
                  <%= f.range_field "wellbeing_metric_#{wellbeing_metric.id}".to_sym, in: 1..10, class: 'form-range',
                                    value: last_score(wellbeing_metric.id) %>
                </div>
                <div class="col-3 col-md-2 description"></div>
              </div>
            <% end %>

            <div class="row">
              <div class="col">
                <%= f.submit 'Submit', class: 'btn btn-primary mt-2' %>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
          <h3>Today</h3>
          <div class="container mt-3">
          <% @wellbeing_metrics.each do |wellbeing_metric| %>
            <div class="row">
              <div class="col-9">
                <label for=<%= "wellbeing_metric_#{wellbeing_metric.id}" %>><%= wellbeing_metric.name %></label>
              </div>
              <input class="hidden" type="range" value=<%= last_score(wellbeing_metric.id) %> id=<%= "wellbeing_metric_#{wellbeing_metric.id}" %>>
              <div class="col-3 description"></div>
            </div>
          <% end %>
          </div>
      <% end %>
    </div>
  </section>
  <section class="row" id="journal">
    <div class="col mb-3">
      <h2 class="mb-3">journal</h2>
      <div class="container buttons two">
        <div class="row">
          <a class="col d-flex align-items-center btn" data-bs-toggle="modal" data-bs-target="#journalEntryModal">
            <%= render partial: 'icon', locals: { icon: 'fa-book-medical', text: 'New Entry' } %>
          </a>
          <a class="col d-flex align-items-center btn" data-bs-toggle="modal" data-bs-target="#journalEntriesModal">
            <%= render partial: 'icon', locals: { icon: 'fa-archive', text: 'Archive' } %>
          </a>
        </div>
      </div>
    </div>
  </section>
</main>
<% if @permissions_required %>
  <%= render partial: '/modals/permissions/new' %>
<% else %>
  <%= render partial: '/modals/journal/new' %>
  <%= render partial: '/modals/journal/archive' %>
<% end %>

<%= javascript_pack_tag 'polar_area_chart' %>