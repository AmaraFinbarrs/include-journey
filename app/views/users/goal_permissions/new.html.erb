<main class="container user permissions mb-3">
  <section class="row">
    <div class="col">
      <div class="container">
        <div class="row">
          <div class="col">
            <p>Please let us know which Include Journey team members you are happy your goals with.</p>
          </div>
        </div>
        <div class="row">
          <div class="col p-1">
            <button id="select-all" class="btn btn-primary w-100">
              Select All <i class="fas fa-check-circle"></i>
            </button>
          </div>
          <!-- <div class="col p-1">
            <button id="select-none" class="btn btn-primary w-100">
              Select None <i class="fas fa-times-circle"></i>
            </button>
          </div> -->
        </div>
        <hr>
        <%= form_with model: @model, url: goal_permissions_path(current_user), method: :post do |f| %>
          <div class="container p-0 mb-2">
            <div class="row">
              <div class="col-12">
                <div class="form-floating select-form">
                  <%= f.select :goal_type, @select_list, {}, { class: 'form-select' } %>
                  <%= f.label :goal_type %>
                </div>
              </div>
              <%  @team_members.each do |team_member| %>
                <% permitted = has_permission(@default_permission, @permissions, team_member.id) %>
                  <% if !permitted %>
                    <div class="col-6 p-1">
                      <%= f.check_box "team_member_#{team_member.id}", class: 'btn-check' %>
                      <%= f.label "team_member_#{team_member.id}", class: "btn w-100" do %>
                        <%= team_member.full_name %>
                        <i class="fas fa-times-circle"></i>
                      <% end %>
                    </div>
                  <% end %>
              <% end %>
            </div>
            <div class="row mt-3">
              <div class="col text-center">
                <%= f.submit 'Share', class: 'btn btn-primary mt-2' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </section>
</main>

<%= javascript_pack_tag 'permissions' %>
