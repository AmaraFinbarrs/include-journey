<div class="ij-form">
  <div class="row">
    <div class="col">
      <h1 class="text-white">Change your password</h1>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <div class="form-group">
          <%= render "users/shared/error_messages", resource: resource %>
          <p class="text-danger">
            <% if flash[:alert] %>
              <%= flash[:alert] %>
            <% end %>
          </p>
        </div>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-floating mb-2">
          <%= f.password_field :password, class: 'form-control', autocomplete: "password", placeholder: "New Password - 6 characters minimum" %>
          <%= f.label :password, "New Password (6 characters minimum)" %>
        </div>

        <div class="form-floating mb-2">
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          <%= f.label :password_confirmation, "Confirm new password" %><br />
        </div>

        <div class="form-group mb-2">
          <%= f.submit "Change my password", class: 'btn btn-success' %>
        </div>
      <% end %>

      <div class="other-actions">
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>

