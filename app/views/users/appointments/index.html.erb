<main class="container user">
  <%= render 'shared/back_btn', path: upcoming_appointments_path, text: 'Upcoming Appointments',
             next_path: new_appointment_path, next_text: 'New Appointment' %>
  <div class="row justify-content-end">
    <%= render 'shared/search' %>
  </div>
  <%= render 'shared/limit' %>
  <section class="row" id="upcoming">
    <div class="col">
      <div class="container">
        <h3 class="mb-3">past appointments</h3>
        <%= render 'shared/search_results' %>
        <div class="row">
          <% @resources.each do |past_appointments| %>
            <div class="col-12 col-md-4 past">
              <div class="card border-primary mt-3">
                <div class="card-header bg-primary">
                  at  <%= past_appointments.time_on_date %> <br />
                </div>
                <div class="card-body">
                  <p>
                    <%= distance_of_time_in_words(Time.now, past_appointments.start) %> ago
                    with <%= past_appointments.who_with %>
                    about <%= past_appointments.what %>
                    at <%= past_appointments.where %>
                    for <%= past_appointments.duration %>
                  </p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </section>
  <%= render 'shared/pagination_controls', index: 'appointments'%>
</main>
