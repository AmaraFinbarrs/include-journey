<main class="container user">
  <div class="row m-1 mt-3">
    <div class="col">
      <%= link_to authenticated_user_root_path, class: 'btn btn-primary' do %>
        <i class="fas fa-arrow-circle-left"></i> Dashboard
      <% end %>
    </div>
  </div>
  <section class="row pb-4" id="upcoming">
    <div class="col-md-3 upcoming">
      <h3 class="mb-0">past appointments</h3>
      <div class="container mt-3">
        <% [*1..4].each do |i| %>
          <div class="row <%= (i > 1 ? 'mt-2' : '') %>">
            <div class="col">
              <%= link_to "Appointment #{i}", '#', class: 'btn btn-success' %>
            </div>
          </div>
        <% end %>
        <div class="row mt-2">
          <div class="col">
            <%= link_to "View all my appointments", new_wellbeing_assessment_path, class: 'btn btn-outline-secondary' %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-4 appointments">
      <h3 class="mb-0">Your appointments</h3>
        <% @appointments.each do |appointments| %>
        <div class="container mt-3 bg-dark text-white">
          <p> You have an appointment at <%= appointments.where %> about <%= appointments.what %>. It starts at
          <%= time_ago_in_words(appointments.start) %> and ends at <%= time_ago_in_words(appointments.end) %> Your
          appointment is with <%= appointments.who_with %></p>
        </div>
        <% end %>
      </div>
    <div class="col-md-5 create">
          <h3 class="mb-0">Create new appointment</h3>
          <p> Enter in the infomation to book a new appointment, a member of the team will get back in touch to confirm
            your booking </p>
          <%= form_with model: @appointment do |f| %>
            <%= f.text_field :where, autofocus: true, class: 'form-control', autocomplete: "where", placeholder: "where" %>
            <%= f.label :where %>
            <%= f.text_field :who_with, autofocus: true, class: 'form-control', autocomplete: "who_with", placeholder: "who with" %>
            <%= f.label :who_with %>
            <%= f.text_field :what, autofocus: true, class: 'form-control', autocomplete: "what", placeholder: "what about" %>
            <%= f.label :what %>
            <div class="form-floating">
              <%= f.number_field :duration, class: 'form-control', autocomplete: "duration (In minutes)", placeholder: "How long? (Minutes)" %>
              <%= f.label :duration_in_minutes %>
            </div>
            <%= f.submit 'Submit', class: 'btn btn-primary mt-2' %>
          <% end %>
          <div class="container mt-3">
            <div class="row">
              <div class="col-9">

                <!-- %= render "shared/assessment_create" %>-->
              </div>
              <div class="col-3 description-col">
              </div>
            </div>
          </div>
        </div>
        </section>
</main>

<%= javascript_pack_tag 'polar_area_chart' %>