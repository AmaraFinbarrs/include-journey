  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-body">
        <div class="container">
          <div class="row">
            <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'btn btn-primary' %>
          </div>
          <div class="row">
            <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: 'btn btn-primary'  %>
          </div>
          <div class="row">
            <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: 'btn btn-primary'  %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
