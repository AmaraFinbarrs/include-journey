<div class="description badge rounded-pill wba-score__<%= value %>">
  <%= case value
      when 1
        'Abysmal'
      when 2
        'Dreadful'
      when 3
        'Rubbish'
      when 4
        'Bad'
      when 5
        'Mediocre'
      when 6
        'Fine'
      when 7
        'Good'
      when 8
        'Great'
      when 9
        'Superb'
      when 10
        'Perfect'
      else
        'Unknown'
      end
  %>
</div>