<div class="col-12 col-md-7">
    <div class="search input-group">
        <input type="text" class="form-control" id="search-input" placeholder="Search" aria-label="Search">
        <% if @tag_list.present? %>
            <select id="search-filter" class="form-select">
                <option value="all">All Tags</option>
                <% @tag_list.each do |tag| %>
                    <option value="<%=tag.id%>"><%=tag.tag%></option>
                <% end %>
            </select>
        <% end %>
        <div class="form-control">
            <label for="search-assigned">Only show assigned</label>
            <input type="checkbox" id="search-assigned" value='true'>
        </div>
        <span class="input-group-text" id="search-btn"><i class="fas fa-search"></i></span>
    </div>
</div>

<%= javascript_pack_tag 'users_search' %>
