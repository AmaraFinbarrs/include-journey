<div class="col-12 col-md-6">
  <div class="search input-group">
    <input type="text" class="form-control" id="search-input" placeholder="Search" aria-label="Search">
    <select class="form-select" id="uploads-added-by">
      <option value="all" selected>Added by All</option>
      <option value="User">Added By User</option>
      <option value="TeamMember">Added By Team Members</option>
      <option value="You">Added By You</option>
    </select>
    <select class="form-select" id="uploads-type">
      <option value="all" selected>All Files Types</option>
      <option value="PDF">PDF Files</option>
      <option value="Images">Image Files</option>
    </select>
    <select class="form-select" id="uploads-visible-to-user">
      <option value="all" selected>All</option>
      <option value="visible">Visible To User</option>
      <option value="invisible">Not Visible To User</option>
    </select>
    <span class="input-group-text" id="search-btn"><i class="fas fa-search"></i></span>
  </div>
</div>

<%= javascript_pack_tag 'uploads_search' %>
