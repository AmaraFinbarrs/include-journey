<div class="card my-2 note-card">
    <div class="card-body ">
        <span>
            <%= message.message %> 
            <% if message.user %> 
                <%= link_to message.user.full_name, user_path(message.user), class: "text-dark"  %>
            <% end %>
        </span>
        <span class="float-end">
            <%= link_to "Don't show me again", notification_path(message), method: :put,  class: "text-dark"  %>
        </span>
    </div>
</div>