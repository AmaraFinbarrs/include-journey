<main class="container team-members">
  <div class="row my-3">
    <div class="col-12 col-md-6 col-lg-4 mx-auto">
      <h1 class="text-center mb-0">Two Factor Authentication</h1>
    </div>
  </div>
  <div class="row mb-4">
    <div class="col">
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div clss="col">
              <div class="card-header">
                1. Scan QR Code
              </div>
              <div class="card-body">
                <p>Please scan the below QR code using an OTP compatible app (such as Google Authenticator or Authy).</p>
                <hr />
                <p class="text-center">
                  <%= qr_code_as_svg(current_team_member.two_factor_qr_code_uri)%>
                </p>
                <hr />
                <p class="text-center">
                  If you cannot scan, please enter the following code manually: <code><%= current_team_member.otp_secret%></code>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <div>

  <div class="row mb-4 mt-4">
    <div class="col">
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="col">
            <div class="card-header">
              2. Confirm OTP Code
            </div>
            <div class="card-body">
              <%= form_for(:two_fa, url: two_factor_settings_path, html: {method: :post}) do |f| %>
                  <p>Please confirm that your authentication application is working by entering a generated code below.</p>

                  <div class="my-3">
                  <%= f.label :code, 'Enter your OTP code' %>
                  <%= f.text_field :code, required: true %>
                  </div>

                  <div>
                  <%= f.label :password, 'Enter your current password' %>
                  <%= f.password_field :password, required: true %> 
                  </div>

                  <div class="text-center mt-3">
                  <%= f.submit 'Confirm and Enable Two Factor', class: 'btn btn-primary' %>
                  </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</main>