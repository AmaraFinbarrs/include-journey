<main class="container team-members crisis-notes show">
  <section class="row">
    <div class="col-12 col-md-6 mb-4 mx-auto">
      <div class="card h-100">
        <div class="card-header">
          <h3>Note History</h3>
        </div>
        <div class="card-body bg-transparent" id="notes-card">
          <h6 class="text-muted text-center"><strong>current</strong></h6>
          <%= render 'note_card', note: @crisis_notes[0], current_note: true, crisis_event_page: false, edit: true %>
        </div>
        <div class="card-body bg-transparent" id="notes-card">
          <% if @crisis_notes[1].present? %>
            <h6 class="text-muted text-center">previous</h6>
          <% end %>
          <% @crisis_notes[1..-1].each do |note| %>
            <%= render 'note_card', note: note, current_note: false, crisis_event_page: false, edit: false %>
          <% end %>
        </div>
      </div>
    </div>
  </section>
</main>

<%= render 'modal', crisis_note: @crisis_note, action: "update", controller: "crisis_notes", crisis_event_id: params[:crisis_event_id] %> 