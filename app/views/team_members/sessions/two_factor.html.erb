<main class="ij-form">
  <div class="container">
    <div class="row d-flex justify-content-center">
      <div class="col-12 col-md-5">
        <div class="form-container">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {method: :post}) do |f| %>
            <h2><i class="fas fa-users"></i> Log in</h2>

            <div class="form-group">
              <p class="text-danger">
                <% if flash[:alert] %>
                  <%= flash[:alert] %>
                <% end %>
              </p>
            </div>

            <div class="form-floating">
              <%= f.text_field :otp_attempt, class: 'form-control', autocomplete: 'off' , placeholder: "OTP code" %>
              <%= f.label :otp_attempt, 'OTP' %>
            </div>

            <div class="form-group">
              <%= f.submit "Log in", class: 'btn btn-primary' %>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</main>
