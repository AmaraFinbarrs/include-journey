<main class="container team-members wellbeing-assessments show">
  <%= render 'shared/back_btn', path: users_path, text: 'Back To All Users',
             next_path: new_user_wellbeing_assessment_path(@wellbeing_assessment.user),
             next_text: 'New Wellbeing Assessment' %>
  <section class="row" id="wellbeing">
    <div class="col">
      <%= render 'shared/wellbeing_chart/wrapper', chart_alignment: 'left', height: '300', show_timestamp: true,
                 chart_heading: "#{@wellbeing_assessment.user.full_name}'s Wellbeing", sliders_heading: 'Recorded At',
                 wellbeing_assessment: @wellbeing_assessment %>
    </div>
  </section>
</main>

<%= javascript_pack_tag 'wellbeing_assessment_chart' %>
