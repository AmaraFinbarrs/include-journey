<main class="container index team-members affirmations">
    <section class="row">
      <div class="col">
        <h2>Upcoming Daily Affirmations</h2>
        <div class="table-container mt-5">
          <table class="table table-dark table-striped table-hover">
            <thead>
              <tr>
                <th scope="col">Affirmation</th>
                <th scope="col">Scheduled Date</th>
                <th scope="col">Last Updated By</th>
              </tr>
            </thead>
            <tbody>
              <% @affirmations.each do |affirmation| %>
                <tr>
                  <td><%= affirmation.text %></td>
                  <td><%= affirmation.date %></td>
                  <td><%= affirmation.team_member.full_name %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <%= link_to '#', class: 'btn btn-primary' do %>
          <i class="fas fa-archive"></i> View Archive
        <% end %>
      </div>
    </section>
</main>
