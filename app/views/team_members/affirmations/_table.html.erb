<div class="table-container">
  <table class="table table-dark table-striped table-hover">
    <thead>
    <tr>
      <th scope="col">Affirmation</th>
      <%= render 'shared/sort_column', column_value: 'scheduled_date', column_text: 'Scheduled Date' %>
      <th scope="col">Last Updated By</th>
      <th scope="col"></th>
    </tr>
    </thead>
    <tbody>
    <% affirmations.each do |affirmation| %>
      <tr>
        <td><%= affirmation.text %></td>
        <td><%= affirmation.date %></td>
        <td><%= affirmation.team_member.full_name %></td>
        <td><%= link_to edit_affirmation_path(affirmation) do %><i class="fas fa-edit"></i><% end %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<%= javascript_pack_tag 'sort_column' %>
