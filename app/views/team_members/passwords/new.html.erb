<main class="ij-form">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <h2>Forgot your password?</h2>

    <div class="form-group">
      <%= render "team_members/shared/error_messages", resource: resource %>
      <p class="text-danger">
        <% if flash[:alert] %>
          <%= flash[:alert] %>
        <% end %>
      </p>
    </div>

    <div class="form-floating">
      <%= f.email_field :email, class: 'form-control', autocomplete: "email", placeholder: "Email Address" %>
      <%= f.label :email %>
    </div>

    <div class="form-group">
      <%= f.submit "Send me reset password instructions", class: 'w-100 btn btn-lg btn-primary' %>
    </div>

    <div class="other-actions">
      <%= render "team_members/shared/links" %>
    </div>
  <% end %>
</main>
