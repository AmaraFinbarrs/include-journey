<div class="ij-form">
  <div class="row">
    <div class="col">
      <h1 class="text-white">Forgot your password?</h1>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <div class="form-group">
          <%= render "team_members/shared/error_messages", resource: resource %>
          <p class="text-danger">
            <% if flash[:alert] %>
              <%= flash[:alert] %>
            <% end %>
          </p>
        </div>

        <div class="form-floating mb-2">
          <%= f.email_field :email, class: 'form-control', autocomplete: "email", placeholder: "Email Address" %>
          <%= f.label :email %>
        </div>

        <div class="form-group mb-2">
          <%= f.submit "Send me reset password instructions", class: 'btn btn-success' %>
        </div>
      <% end %>

      <div class="other-actions">
        <%= render "team_members/shared/links" %>
      </div>
    </div>
  </div>
</div>

