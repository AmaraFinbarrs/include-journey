<main class="ij-form edit">
  <div class="col-12 col-md-7">
    <div class="form-container">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <h2>Edit <%= resource_name.to_s.humanize %></h2>

        <div class="form-group">
          <%= render "team_members/shared/error_messages", resource: resource %>
          <p class="text-danger">
            <% if flash[:alert] %>
              <%= flash[:alert] %>
            <% end %>
          </p>
        </div>

        <div class="form-group">
          <h4>General</h4>
          <div class="row">
            <div class="col-md">
              <div class="form-floating">
                <%= f.text_field :first_name, autofocus: true, class: 'form-control', autocomplete: "first-name", placeholder: "First Name" %>
                <%= f.label :first_name %>
              </div>
            </div>
            <div class="col-md">
              <div class="form-floating">
                <%= f.text_field :last_name, class: 'form-control', autocomplete: "last-name", placeholder: "Last Name" %>
                <%= f.label :last_name %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md">
              <div class="form-floating">
                <%= f.number_field :mobile_number, class: 'form-control', autocomplete: "mobile-number", placeholder: "Mobile No." %>
                <%= f.label :mobile_number %>
              </div>
            </div>
          </div>
        </div>

        <div class="form-group">
          <h4>Account</h4>
          <div class="row">
            <div class="col-md">
              <div class="form-floating">
                <%= f.email_field :email, class: 'form-control', autocomplete: "email", placeholder: "Email Address" %>
                <%= f.label :email %>
              </div>
            </div>
          </div>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>
          <div class="row">
            <div class="col-md">
              <div class="form-floating change-password">
                <%= f.password_field :password, class: 'form-control', autocomplete: "password", placeholder: "Password - 6 characters minimum" %>
                <%= f.label :password do %>
                  Password <span class="small-text">(leave blank if you don't want to change it)</span>
                <% end %>
              </div>
            </div>
            <div class="col-md confirm-password">
              <div class="form-floating">
                <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "password", placeholder: "Password Again" %>
                <%= f.label :password_confirmation %>
              </div>
            </div>
          </div>
        </div>

        <div class="form-group">
          <button class="btn btn-primary my-2 py-2 px-5" type="button" data-bs-toggle="modal" data-bs-target="#updateModal">
            Update
          </button>
        </div>

        <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %>
      
        <%= render 'modals/confirm_edit', f: f %>

      <% end %>
    </div>
  </div>
</main>

<%= javascript_pack_tag 'edit_form' %>
