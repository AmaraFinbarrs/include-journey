<main class="container team-members users">
  <div class="col mt-3">
    <%= link_to users_path, class: 'btn btn-primary' do %>
      <i class="fas fa-arrow-circle-left"></i> <%= 'Back to users' %>
    <% end %>
  </div>
  <section class="row">
    <div class="col">
      <h2 class="my-3"><%= @user.full_name %></h2>
    </div>
  </section>
  <div class="row">
    <div class="col-12 col-md-6 mb-4">
      <div class="card h-100">
        <div class="card-header">
          <h3>User info</h3>
        </div>
        <div class="card-body">
          <!--          <div class="container">-->
          <div class="row">
            <div class="col-12">
              <div class="container mb-md-0">
                <div class="row font-weight-link">
                  <%= @user.full_name %>
                </div>
                <div class="row">
                  <%= link_to "mailto:#{@user.email}" do %>
                    <i class="fas fa-envelope"></i> <%= @user.email %>
                  <% end %>
                </div>
                <div class="row">
                  <%= link_to "tel:0#{@user.mobile_number}" do %>
                    <i class="fas fa-phone-alt"></i> <%= "0#{@user.mobile_number}" %>
                  <% end %>
                </div>
                <div class="row">
                  <span><i class="fas fa-calendar"></i> Release: <%= @user.release %></span>
                </div>
                <% unless @unread_journal_entries.zero? %>
                  <div class="row">
                    <%= link_to '#' do %>
                      <i class="fas fa-book-reader"></i> <%= @unread_journal_entries %> unread journal entries
                    <% end %>
                  </div>
                <% end %>
                <% unless @active_crisis.empty? %>
                  <div class="row">
                    <%= link_to active_crisis_events_path do %>
                      <i class="fas fa-exclamation-circle"></i> <%= @active_crisis.count %> active crisis
                      events
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <div class="card-footer d-flex justify-content-between">
          <span>Last Sign In</span>
          <span>
            <%= @user.last_sign_in_at.present? ? "#{time_ago_in_words(@user.last_sign_in_at)} ago from #{@user_location}" : @user.last_sign_in %>
          </span>
        </div>
      </div>
    </div>
    <div class="col-12 col-md-6 mb-4">
      <div class="card h-100 <%= @user.crisis_events.active.empty? ? '' : 'has-crisis' %>">
        <% if @active_crisis.empty? %>
          <div class="card-header bg-success">
            <h3>SOS status: none <i class="fa fa-check-circle"></i></h3>
          </div>
          <div class="card-body text-start">
            <p class="text-start">
              This user has no active Crisis Events. Any active Crisis Events will be displayed here.
            </p>
          </div>
        <% else %>
          <div class="card-header bg-danger">
            <h3>SOS status:
              <span class="h3 pb-0">Crisis </span><i class="fas fa-exclamation-triangle"></i>
            </h3>
          </div>
          <div class="card-body">
            <p><span class="h5">When? </span><%= @active_crisis.first.created %></p>
            <p><span class="h5">Type? </span> <%= @active_crisis.first.crisis_type.category %></p>
            <p><span class="h5">Info: </span> <%= @active_crisis.first.additional_info %></p>
          </div>
        <% end %>
        <!--        <div class="card-footer py-3">-->
        <!--        </div>-->
      </div>
    </div>
  </div>
  <div class="row mb-4">
    <div class="col">
      <div class="card">
        <div class="card-header">
          <h3>User wellbeing</h3>
        </div>
        <div class="card-body">
          <div class="row d-flex align-items-center">
            <div class="col-12 col-lg-5 text-start">
              <% if @wba.present? %>
                <h4>Current wellbeing</h4>
                <span><strong>Last reported: </strong><%= @wba.created %></span>
                <canvas class="mt-2 p-xl-5 wellbeing-chart" id="wellbeing-chart" width="400" height="400"></canvas>
              <% end %>
            </div>
            <div class="col-12 col-lg-6 offset-lg-1 sliders d-flex justify-content-center">
              <% if @wba.present? %>
                <div class="container mt-3">
                  <% @wellbeing_metrics.each do |score| %>
                    <div class="row">
                      <div class="col-9 col-xl-5">
                        <label for=<%= "wellbeing_metric_#{score.wellbeing_metric.id}" %>><%= score.wellbeing_metric.name %></label>
                      </div>
                      <input class="d-none" type="range" id="<%= "wellbeing_metric_#{score.wellbeing_metric.id}" %>"
                             value="<%= score.value %>">
                      <div class="col-3 col-md-3 description-col">
                        <div class="description badge rounded-pill wba-score__<%= score.value %>"></div>
                      </div>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row" id="journal">
    <div class="col-12 col-md-6 mb-4">
      <div class="card h-100">
        <div class="card-header">
          <h3>Journal</h3>
        </div>
        <div class="card-body">
          <% if @journal_entries.present? %>
            <span>The User has made
              <%= link_to "/users/#{@user.id}/journal_entries" do %>
                <%= @journal_entries.count %> entries
              <% end %>
              in total, <strong><%= @unread_journal_entries %></strong> of which are
              <%= link_to "/users/#{@user.id}/journal_entries/unread" do %>
                unread<% end %>. <!-- Same line for full stop -->
            </span>
            <h5 class="pt-3">Latest entries</h5>
            <% recent_entries = @journal_entries.last(5) %>
            <div class="col-12">
              <table class="table">
                <thead class="">
                <th class="border-0" scope="col">Feeling</th>
                <th class="border-0" scope="col">Time & date</th>
                <th class="border-0" scope="col">Status</th>
                </thead>
                <tbody class="">
                <% recent_entries.each do |entry| %>
                  <tr>
                    <td class="h3 border-0">
                      <%= entry.feeling %>
                    </td>
                    <td class="border-0">
                      <%= entry.created %>
                    </td>
                    <td class="border-0">
                      <% if current_team_member.viewed_journal_entries.includes(entry) %>
                        Read
                      <% else %>
                        Unread
                      <% end %>
                    </td>
                  </tr>
                <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <span>The User hasn't completed any Journal entries yet</span>
          <% end %>
        </div>
        <div class="card-footer text-center">
          <button class="btn btn-primary my-2 py-2 px-5" type="button">
            <%= link_to "/users/#{@user.id}/journal_entries" do %>
              View User's Journal
            <% end %>
          </button>
        </div>
      </div>
    </div>
    <div class="modal fade" id="note-modal" tabindex="-1" role="dialog" aria-labelledby="note-modal" aria-hidden="true">
      <div class="modal-dialog modal-lg col-12" role="document">
        <div class="modal-content">
          <%= form_with model: @note,
                        url: user_add_note_index_path(@user),
                        method: :post do |form| %>
            <div class="modal-header border-0">
              <h5 class="modal-title text-black-50">Add a note for this user</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body border-0">
              <div class="input-group mb-3">
                <%= form.text_area :content, class: 'form-control', rows: '8', placeholder: 'Add your note', aria: { label: 'Add your note' }, required: 'true' %>
              </div>
              <div class="form-check form-switch d-flex justify-content-between px-0">
                <%= form.label :visible_to_user, class: 'form-check-label text-black-50' do %>
                  Allow user to see this note?
                <% end %>
                <%= form.check_box :visible_to_user, class: 'form-check-input' %>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
              <%= form.submit 'Add note', class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-12 col-md-6 mb-4">
      <div class="card h-100">
        <div class="card-header">
          <h3>User Notes</h3>
        </div>
        <div class="card-body bg-transparent" id="notes-card">
          <% if @user_notes.empty? %>
            <span>There are no notes on this user yet.</span>
          <% else %>
            <% @user_notes.each do |note| %>
              <div class="card bg-transparent my-2">
                <div class="card-header d-flex justify-content-between">
                  <span class="me-4">Added by <strong><%= note.team_member.first_name %></strong> on <strong><%= note.created %></strong></span>
                  <span>Visible to user?
                    <% if note.visible_to_user? %>
                      <i class="fa fa-eye text-danger ms-2"></i>
                    <% else %> <i class="fa fa-eye-slash ms-2"></i>
                    <% end %>
                  </span>
                </div>
                <div class="card-body">
                  <p><%= simple_format(note.content) %></p>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
        <div class="card-footer text-center">
          <button class="btn btn-primary my-2 py-2 px-5" type="button" data-bs-toggle="modal" data-bs-target="#note-modal">
            Add Note
          </button>
        </div>
      </div>
    </div>
  </div>
</main>

<%= javascript_pack_tag 'polar_area_chart' %>
