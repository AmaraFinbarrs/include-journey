<main class="container dashboard">
  <!-- User bio / details section -->
  <section class="row">
    <div class="col mb-3">
      <h2 class="mb-3">User</h2>
      <div class="container d-flex justify-content-between">
        <div class="col-4 d-flex flex-column">
          <i class="mb-1 h1 fas fa-user"></i>
          <span><%= @user.first_name + ' ' + @user.last_name %></span>
        </div>
        <div class="col-7 text-start">
          <p><strong>Last logged in:</strong><%= @user.last_sign_in_at %></p>
          <p><strong>Logged in from:</strong><%= @user_location %></p>
        </div>
      </div>
    </div>
  </section>

  <!-- SOS section -->
  <section class="row" id="awaiting_approval">
    <div class="col">
      <%if @user.crisis_events.where("closed = false").count > 0 %>
        <h3>SOS status: <span class="text-danger">Crisis </span><i class="fas fa-exclamation-triangle text-danger"></i> </h3>
      <%else %>
        <h3>SOS status: <span class="text-success">none</span></h3>
      <%end %>
    </div>
    <div class="row text-start">
      <%if @user.crisis_events.where("closed = false").count > 0 %>
        <%for crisis in @user.crisis_events.where("closed = false") do %>
          <p><span class="h5">When? </span><%= crisis.created_at %></p>
          <p><span class="h5">Type? </span> <%= crisis.crisis_type %></p>
          <p><span class="h5">Info: </span> <%= crisis.additional_info %></p>
        <%end %>
      <%else %>
        <p class="text-start">
          This user has no active crisis events. Any active Crisis Events will be displayed here.
        </p>
      <%end %>
    </div>
  </section>
  <%# end %>

  <!-- Wellbeing Metrics section -->
  <section class="row" id="wellbeing">
    <div class="col">
      <h3 class="mb-5">User Wellbeing</h3>
      <div class="row text-start pb-5">
        <h4>Donut</h4>
      </div>
      <div class="row text-start pb-5">
        <h4>Wellbeing history</h4>
      </div>
    </div>
  </section>

  <!-- Journal section -->
  <section class="row" id="users">
    <div class="col">
      <h3>Journal</h3>
      <div class="row text-start">
        <h4>Latest journal entry</h4>
        <p class="my-3">You'll see the user's latest journal entry here</p>
        <a href="#" class="btn btn-primary" role="button">
          View User's journal <i class="fa fa-angle-right"></i>
        </a>
      </div>
    </div>
  </section>

  <!-- Notes section -->
  <!-- Add note modal -->
  <div class="modal fade" id="note-modal" tabindex="-1" role="dialog" aria-labelledby="note-modal" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <form action="#" enctype="multipart/form-data">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Sorry...</h5>
          </div>
          <div class="modal-body">
            <div class="input-group">
              <textarea class="form-control" rows="8" name="note"
                        placeholder="Add your note"
                        aria-label="Add your note"
                        required
                        class="form-control">
              </textarea>
            </div>
            <div class="input-group">
              <label for="userView">
                Allow user to see this note?
              </label>
              <input type="checkbox" id="userView" name="userView">
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="" data-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Add note</button>
          </div>
        </form>
      </div>
    </div>
  </div>
    <!-- End modal -->


  <section class="row" id="users">
    <div class="col">
      <h3>Team Notes</h3>
      <div class="row text-start">
        <p class="">Note added by <strong><%=  %> </strong> on <strong><%=   %></strong></p>
        <button class="btn btn-primary my-2" type="button" data-toggle="#note-modal" data-target="#note-modal">
          Add note <i class="fa fa-angle-right ml-2"></i>
        </button>
      </div>
    </div>
  </section>

  <!-- Button trigger modal -->
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
    Launch demo modal
  </button>

  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          ...
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>






</main>
