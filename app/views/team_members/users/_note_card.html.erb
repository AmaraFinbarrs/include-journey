<div class="card bg-transparent my-2">
  <div class="card-header d-flex justify-content-between">
    <span class="me-4">Added by <strong><%= note.team_member.first_name %></strong> on <strong><%= note.created %></strong></span>
    <div class="note-icons">
      <% unless note.replacing_id.nil? %>
        <span><i class="fas fa-history ms-2" data-toggle="tooltip" data-placement="bottom" title="View Edit History"></i></span>
      <% end %>

      <span>
        <% if note.visible_to_user? %>
          <i class="fa fa-eye text-danger ms-2" data-toggle="tooltip" data-placement="bottom" title="Make Visible to User"></i>
        <% else %>
          <i class="fa fa-eye-slash ms-2" data-toggle="tooltip" data-placement="bottom" title="Make Invisible to User"></i>
        <% end %>
      </span>

      <span onclick="document.getElementById('note_id').value = <%= note.id %>; document.getElementById('edit_note_modal_content').value = document.getElementById('user_note-<%= note.id %>').innerText; document.getElementById('edit_note_modal_checkbox').checked = <%= note.visible_to_user %> ;">
        <i class="fas fa-edit ms-2" data-bs-toggle="modal" data-bs-target="#edit-note-modal" data-toggle="tooltip" data-placement="bottom" title="Edit"></i>
      </span>

    </div>
  </div>
  <div class="card-body">
    <span id="user_note-<%= note.id %>">
      <p>ID: <%= note.id %></p>
      <p>Replacing: <%= note.replacing_id %></p>
      <p>Replaced by:<%= note.replaced_by_id %></p>
      <%= simple_format(note.content) %>
    </span>
  </div>
</div>

<%# %>