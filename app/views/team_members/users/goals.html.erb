<main class="container user goals index">
  <section class="row">
    <h2><%= @user.full_name %>'s Goals</h2>
  </section>
  <section class="row">
    <div class="col">
      <div class="container">
        <div class="row">
            <% if @has_short_term_permissions%>
              <div class="col-12 col-md-6 short-term mb-3 mb-md-0">
                <div class="card">
                  <div class="card-header">
                    <h4>Short Term</h4>
                  </div>
                  <div class="card-body">
                    <%= render '/users/goals/list', goals: @goals.short_term %>
                  </div>
                </div>
              </div>
            <% end %>
            <% if @has_long_term_permissions%>
              <div class="col-12 col-md-6 long-term">
                <div class="card">
                  <div class="card-header">
                    <h4>Long Term</h4>
                  </div>
                  <div class="card-body">
                    <%= render '/users/goals/list', goals: @goals.long_term %>
                  </div>
                </div>
              </div>
            <% end %>
        </div>
      </div>
    </div>
  </section>
</main>
