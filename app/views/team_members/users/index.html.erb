<main class="container team-members users index">
  <div class="row m-1 mt-3">
    <div class="col">
      <%= link_to authenticated_team_member_root_path, class: 'btn btn-primary' do %>
        <i class="fas fa-arrow-circle-left"></i> Dashboard
      <% end %>
    </div>
  </div>
  <section class="row">
    <div class="col">
      <h3>Users Info</h3>
      <div class="container p-0">
        <div class="row">
          <div class="table-container">
            <table class="table table-dark table-striped link-table">
              <thead>
                <th scope="col">Total Users</th>
                <th scope="col">Active Users</th>
              </thead>
              <tbody>
                <tr>
                  <td><%= @users.count %></td>
                  <td><%= @active_users.count %></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
        <div class="row"></div>
      </div>
    </div>
  </section>
  <section class="row">
    <div class="col">
      <h3>Pinned Users</h3>
      <div class="container p-0">
        <div class="row">
          <% @pinned_users.each do |user| %>
            <div class="col-12 col-md-6 mb-3">
              <div class="card">
                <div class="card-header">
                  <span><%= link_to "#{user.first_name} #{user.last_name}", user_path(user) %></span>
                  <span><i class="fas fa-unlink"></i></span>
                </div>
                <div class="card-body">
                  <div class="container">
                    <div class="row">
                      <div class="col-8">
                        <div class="container">
                          <div class="row">
                            <%= link_to user.email, "mailto:#{user.email}" %>
                          </div>
                          <div class="row">
                            <%= link_to "0#{user.mobile_number}", "tel:0#{user.mobile_number}" %>
                          </div>
                          <div class="row">
                            <%= user.release %>
                          </div>
                        </div>
                      </div>
                      <div class="col-4"></div>
                    </div>
                  </div>
                </div>
                <div class="card-footer">
                  <span>Last Sign In</span>
                  <span><%= user.last_sign_in %></span>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </section>
  <section class="row">
    <div class="col">
      <h3>All Users</h3>
      <div class="table-container">
        <table class="table table-dark table-striped link-table">
          <thead>
            <th scope="col">First</th>
            <th scope="col">Last</th>
            <th scope="col">Release Date</th>
            <th scope="col">Email</th>
            <th scope="col">Last Sign In</th>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td>
                  <%= link_to user_path(user) do %>
                    <%= user.first_name %>
                  <% end %>
                </td>
                <td>
                  <%= link_to user_path(user) do %>
                    <%= user.last_name %>
                  <% end %>
                </td>
                <td>
                  <%= link_to user_path(user) do %>
                    <%= user.release %>
                  <% end %>
                </td>
                <td>
                  <%= link_to user_path(user) do %>
                    <%= user.email %>
                  <% end %>
                </td>
                <td>
                  <%= link_to user_path(user) do %>
                    <%= user.last_sign_in %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </section>
</main>