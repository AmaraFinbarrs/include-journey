<main class="container team-members users index">
  <div class="row m-1 mt-3">
    <div class="col">
      <%= link_to authenticated_team_member_root_path, class: 'btn btn-primary' do %>
        <i class="fas fa-arrow-circle-left"></i> Dashboard
      <% end %>
    </div>
  </div>
  <section class="row">
    <div class="col">
      <h3>Users Info</h3>
      <div class="container p-0">
        <div class="row">
          <div class="col-12 col-md-6 mb-3 mb-md-0">
            <div class="input-group">
              <span class="input-group-text" id="total-users">Total Users</span>
              <input type="text" class="form-control" aria-label="Total Users" aria-describedby="total-users"
              value="<%= @users.count %>" disabled>
              <span class="input-group-text"><i class="fas fa-users"></i></span>
            </div>
          </div>
          <div class="col-12 col-md-6">
            <div class="input-group">
              <span class="input-group-text" id="active-users">Active Users</span>
              <input type="text" class="form-control" aria-label="Active Users" aria-describedby="active-users"
              value="<%= @active_users.count %>" disabled>
              <span class="input-group-text"><i class="fas fa-users"></i></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section class="row">
    <div class="col">
      <h3>Pinned Users</h3>
      <div class="container p-0">
        <div class="row">
          <% @pinned_users.each do |user| %>
            <div class="col-12 col-md-6 mb-3">
              <div class="card">
                <div class="card-header">
                  <span>
                    <%= link_to user_path(user) do %>
                      <%= user.first_name %> <%= user.last_name %> <i class="fas fa-external-link-alt"></i>
                    <% end %>
                  </span>
                  <span><i class="fas fa-unlink"></i></span>
                </div>
                <div class="card-body">
                  <div class="container">
                    <div class="row">
                      <div class="col-12 col-md-6">
                        <div class="container">
                          <div class="row">
                            <%= link_to "mailto:#{user.email}" do %>
                              <i class="fas fa-envelope"></i> <%= user.email %>
                            <% end %>
                          </div>
                          <div class="row">
                            <%= link_to "tel:0#{user.mobile_number}" do %>
                              <i class="fas fa-phone-alt"></i> <%= "0#{user.mobile_number}" %>
                            <% end %>
                          </div>
                          <div class="row">
                            <span><i class="fas fa-calendar"></i> <%= user.release %></span>
                          </div>
                        </div>
                      </div>
                      <div class="col-12 col-md-6 chart">
                        <% last_wba_self = user.wba_selves.includes(:wba_self_scores).last %>
                        <% if last_wba_self.present? %>
                          <a href='#'>
                            <div class="wellbeing-chart-wrapper">
                              <canvas class="wellbeing-chart" width="400" height="400"></canvas>
                              <div class="sliders hidden">
                                <% last_wba_self.wba_self_scores.includes(:wellbeing_metric).each do |score| %>
                                  <label for=<%= "wellbeing_metric_#{score.wellbeing_metric.id}" %>>
                                    <%= score.wellbeing_metric.name %>
                                  </label>
                                  <input  type="range" id="<%= "wellbeing_metric_#{score.wellbeing_metric.id}" %>" value="<%= score.value %>">
                                <% end %>
                              </div>
                              <div class="mt-3 w-100"><%= last_wba_self.created %></div>
                            </div>
                          </a>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="card-footer">
                  <span>Last Sign In</span>
                  <span><%= user.last_sign_in %></span>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </section>
  <section class="row">
    <div class="col">
      <h3>All Users</h3>
      <div class="table-container">
        <table class="table table-dark table-striped link-table">
          <thead>
            <th scope="col">First</th>
            <th scope="col">Last</th>
            <th scope="col">Release Date</th>
            <th scope="col">Email</th>
            <th scope="col">Last Sign In</th>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td>
                  <%= link_to user_path(user) do %>
                    <%= user.first_name %>
                  <% end %>
                </td>
                <td>
                  <%= link_to user_path(user) do %>
                    <%= user.last_name %>
                  <% end %>
                </td>
                <td>
                  <%= link_to user_path(user) do %>
                    <%= user.release %>
                  <% end %>
                </td>
                <td>
                  <%= link_to user_path(user) do %>
                    <%= user.email %>
                  <% end %>
                </td>
                <td>
                  <%= link_to user_path(user) do %>
                    <%= user.last_sign_in %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </section>
</main>

<%= javascript_pack_tag 'polar_area_chart' %>