<main class="container team-members">
  <section class="row">
    <div class="col mb-3">
      <h2>Dashboard</h2>
      <div class="container header-buttons">
        <div class="row">
          <%= render 'shared/dashboard_btn', path: users_path, icon: 'fa-user', text: 'Users' %>
          <%= render 'shared/dashboard_btn', path: analytics_path, icon: 'fa-chart-line', text: 'Analytics' %>
          <%= render 'shared/dashboard_btn', path: recent_contact_logs_path, icon: 'fa-clipboard-list', text: 'Contact Logs' %>
        </div>
        <div class="row">
          <%= render 'shared/dashboard_btn', path: journal_entries_path, icon: 'fa-book-open',
                     text: 'Journal Entries' %>
          <%= render 'shared/dashboard_btn', path: wellbeing_assessments_path, icon: 'fa-heart',
                     text: 'Wellbeing Assessments' %>
          <%= render 'shared/dashboard_btn', path: wellbeing_services_path, icon: 'fa-tools',
                     text: 'Wellbeing Management' %>
        </div>
        <div class="row">
          <%= render 'shared/dashboard_btn', path: affirmations_path, icon: 'fa-smile', text: 'Daily Affirmations' %>
          <%= render 'shared/dashboard_btn', path: tags_path, icon: 'fa-tags', text: 'Tags' %>
          <%= render 'shared/dashboard_btn', path: Survey.count.zero? ? new_survey_path : surveys_path,
                     icon: 'fa-clipboard-list', text: 'Surveys' %>
        </div>
      </div>
    </div>
  </section>
  <%
=begin%>
  Uncomment section below to be able to disable OTP two factor
<%
=end%>
  <%
=begin%>
 <section class="row">
  <div class="col mb-3">
    <div class="card">
      <div class="card-header">
        Two factor authentication
      </div>
      <div class="card-body">
        <% if current_team_member.otp_required_for_login %>
          <p>Two factor authentication is enabled.</p>
          <p><%= link_to('Disable Two Factor Authentication', two_factor_settings_path, class: 'btn btn-danger', method: :delete, data: {confirm: 'Are you sure you want to disable two factor authentication?'}) %></p>
        <% else %>
          <p>Two factor authentication is NOT enabled.</p>
          <p><%= link_to('Enable Two Factor Authentication', new_two_factor_settings_path, class: 'btn btn-primary') %></p>
        <% end %>
      </div>
    </div>
  </div>
  </section> 
<%
=end%>
</main>
