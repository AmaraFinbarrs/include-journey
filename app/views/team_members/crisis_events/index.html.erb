<main class="container team-members crisis-events">
  <%= render 'shared/back_btn' %>
  <%= render 'shared/wrapped_search' %>
  <section class="row">
    <div class="col">
      <h3>Overview</h3>
      <p>
        There are currently <%= @crisis_events.count %> active crisis events from <%= @crisis_events_users %> users.
        The oldest open event is from <%= "#{time_ago_in_words(@crisis_events.order(:created_at).first.created_at)} ago." %>
      </p>
      <p>
        There are <%= @closed_events.count %> closed events. <%= @closed_events_30_days.count %> in the last 30 days from <%= @closed_events_30_days.distinct.count(:user_id) %> users,
        <%= @closed_events_7_days.count %> in the last 7 days from <%= @closed_events_7_days.distinct.count(:user_id) %> users.
      </p>
    </div>
  </section>
  <section class="row">
    <div class="col">
      <h3>Closed Crisis Events</h3>
      <%= render 'shared/search_results' %>
      <%= render 'shared/limit' %>
      <div class="table-container">
        <table class="table table-dark table-striped table-hover link-table table-hover">
          <thead>
          <tr>
            <th scope="col">User</th>
            <th scope="col">Crisis Type</th>
            <th scope="col">Latest Update</th>
            <th scope="col">Closed At</th>
          </tr>
          </thead>
          <tbody>
          <% @resources.each do |crisis_event| %>
            <tr>
              <td>
                <%= link_to "#{crisis_event.user.full_name}", crisis_event_path(crisis_event) %>
              </td>
              <td>
                <%= link_to "#{crisis_event.crisis_type.category}", crisis_event_path(crisis_event) %>
              </td>
              <td>
                <% if crisis_event.crisis_notes.present? %>
                  <%= link_to "#{crisis_event.crisis_notes.last.content}", crisis_event_path(crisis_event) %>
                <% else %>
                  <<%= link_to "#{crisis_event.additional_info}", crisis_event_path(crisis_event) %>
                <% end %>
              </td>
              <td>
                <%= link_to "#{time_ago_in_words(crisis_event.closed_formatted)} ago", crisis_event_path(crisis_event) %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <%= render 'shared/pagination_controls', index: 'crisis_events' %>
    <div class="col">
      <%= link_to 'View Active', active_crisis_events_path, class: 'btn btn-primary' %>
    </div>
  </section>
</main>
