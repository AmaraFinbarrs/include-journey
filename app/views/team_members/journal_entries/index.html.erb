<main class="container team-members journal-entries">
  <%= render 'shared/back_btn', path: authenticated_team_member_root_path, text: 'Dashboard',
             query_path: journal_entries_path %>
  <%= render 'shared/wrapped_search' %>
  <section class="row">
    <div class="col">
      <h3>Journal Entries</h3>
      <%= render 'shared/search_results', query: params[:query], count: @count %>
      <%= render 'shared/limit', resources_per_page: @resources_per_page %>
      <div class="table-container">
        <table class="table table-dark table-striped link-table">
          <thead>
          <th scope="col">User</th>
          <th scope="col">Feeling</th>
          <th scope="col">Viewed</th>
          <th scope="col">Created At</th>
          </thead>
          <tbody>
          <% @resources.each do |journal_entry| %>
            <tr>
              <td>
                <%= link_to "#{journal_entry.user.full_name}", journal_entry_path(journal_entry) %>
              </td>
              <td>
                <%= link_to "#{journal_entry.feeling}", journal_entry_path(journal_entry), class: 'feeling' %>
              </td>
              <td>
                <%= link_to journal_entry_path(journal_entry) do %>
                  <% if journal_entry.journal_entry_view_logs.empty? %>
                    <i class="fas fa-times-circle"></i>
                  <% else %>
                    <i class="fas fa-check-circle"></i>
                  <% end %>
                <% end %>
              </td>
              <td>
                <%= link_to "#{journal_entry.created}", journal_entry_path(journal_entry) %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <%= render 'shared/pagination_controls', page: @page, final_page: @final_page, last_page?: @last_page,
               first_page: journal_entries_path(page: 1, query: @query, limit: params[:limit]),
               next_page: journal_entries_path(page: @page + 1, query: @query, limit: params[:limit]),
               previous_page: journal_entries_path(page: @page - 1, query: @query, limit: params[:limit]),
               final_page_path: journal_entries_path(page: @final_page, query: @query, limit: params[:limit]) %>
  </section>
</main>
