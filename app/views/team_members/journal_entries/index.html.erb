<main class="container team-members journal-entries">
  <div class="row m-1 mt-3">
    <div class="col">
      <%= link_to authenticated_team_member_root_path, class: 'btn btn-primary' do %>
        <i class="fas fa-arrow-circle-left"></i> Dashboard
      <% end %>
    </div>
  </div>
  <section class="row">
    <div class="col">
      <h3>Journal Entries</h3>
      <div class="table-container">
        <table class="table table-dark table-striped link-table">
          <thead>
          <th scope="col">User</th>
          <th scope="col">Feeling</th>
          <th scope="col">Viewed</th>
          <th scope="col">Created At</th>
          </thead>
          <tbody>
          <% @resources.each do |journal_entry| %>
            <tr>
              <td>
                <%= link_to "#{journal_entry.user.first_name} #{journal_entry.user.last_name}",
                            journal_entry_path(journal_entry) %>
              </td>
              <td>
                <%= link_to "#{journal_entry.feeling}", journal_entry_path(journal_entry), class: 'feeling' %>
              </td>
              <td>
                <%= link_to journal_entry_path(journal_entry) do %>
                  <% if viewed(@journal_entry_view_logs, journal_entry.id) %>
                    <i class="fas fa-check-circle"></i>
                  <% else %>
                    <i class="fas fa-times-circle"></i>
                  <% end %>
                <% end %>
              </td>
              <td>
                <%= link_to "#{journal_entry.created}", journal_entry_path(journal_entry) %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="col-12">
      <div class="container pagination-controls">
        <div class="row">
          <div class="col">
            <% unless @page == 1 %>
              <%= link_to pages_journal_entries_path(@page - 1), class: 'btn btn-primary' do %>
                <i class="fas fa-arrow-circle-left"></i> Previous
              <% end %>
            <% end %>
          </div>
          <div class="col"></div>
          <div class="col">
            <% unless @last_page %>
              <%= link_to pages_journal_entries_path(@page + 1), class: 'btn btn-primary' do %>
                Next <i class="fas fa-arrow-circle-right"></i>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
